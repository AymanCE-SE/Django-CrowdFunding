# ======================
# PRODUCTION SETTINGS (Use for Render deployment)
# ======================

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-with-django-insecure-removed
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database - Use PostgreSQL in production
# Format: postgresql://user:password@host:port/database_name
DATABASE_URL=postgresql://user:password@host:port/crowdfunding_db

# Application domain used when building absolute URLs in emails
# Example: your-app.onrender.com
APP_DOMAIN=your-app.onrender.com

# Email Configuration (Gmail)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password

# Google OAuth - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Facebook OAuth - Get from Facebook Developer
FACEBOOK_CLIENT_ID=your-facebook-client-id-here
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret-here

# Security Settings (For production)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ======================
# DEVELOPMENT SETTINGS (Use for local development)
# ======================
# Uncomment below and set DEBUG=True for local development

# DEBUG=True
# SECRET_KEY=django-insecure-your-dev-key
# ALLOWED_HOSTS=localhost,127.0.0.1
# DATABASE_URL=sqlite:///db.sqlite3
# SECURE_SSL_REDIRECT=False
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False
# SECURE_HSTS_SECONDS=0
# SECURE_HSTS_INCLUDE_SUBDOMAINS=False
# SECURE_HSTS_PRELOAD=False

